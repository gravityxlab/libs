{
  "compilerOptions": {
    "target": "es2017",
    "module": "ES6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es2017"],
    "outDir": "./packages",
    "rootDir": "./src",
    "baseUrl": "./",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "packages"]
}
